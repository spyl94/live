<div class="span11 well">
    <div class="span5 row">
        <div class="span1">
            <a href="#" class="thumbnail"><img src="{{ gravatar(user.email) }}" alt="">
            </a>
        </div>
        <div class="span3">
            <a href="{{ path('users_view', {'slug' : user.usernameCanonical }) }}">{{ user.username }}</a>
            <p><strong>{{ user.firstname }} {{ user.lastname }}</strong></p>
            <span class=" badge badge-warning">{{ user.email }}</span> <span class=" badge badge-info">{{ user.promo }}</span>
        </div>
        <div class="span5 row">
            <div class="span2">
                {% render(controller("LiveUserBundle:User:instruments", { 'user' : app.user, 'limit' : 2, offset : 0 })) %}
            </div>
            <div class="span2">
                {% render(controller("LiveUserBundle:User:instruments", { 'user' : app.user, 'limit' : 2, offset : 2 })) %}
            </div>
        </div>
    </div>
    <div class="span5">
        <h4>Professeur :</h4>
            {% render(controller("LiveLessonBundle:Lesson:list", { 'user': app.user })) %}
        <h4>Élève :</h4>
            {% render(controller("LiveLessonBundle:LessonAsk:list", { 'user': app.user })) %}
    </div>
</div>
