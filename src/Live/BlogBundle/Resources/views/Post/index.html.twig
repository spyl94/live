{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Content</th>
                <th>Contentformatter</th>
                <th>Enabled</th>
                <th>Publicationdatestart</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Commentsenabled</th>
                <th>Commentscount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.contentFormatter }}</td>
                <td>{{ entity.enabled }}</td>
                <td>{% if entity.publicationDateStart %}{{ entity.publicationDateStart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.commentsEnabled }}</td>
                <td>{{ entity.commentsCount }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_post_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
