{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite' output='css/compiled/slider.css'
                        'bundles/liveblog/css/nivo-slider.css'
                        'bundles/liveblog/css/themes/default/default.css'
             %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Nivo Slider -->
    <script src="{{ asset('bundles/liveblog/js/jquery.nivo.slider.pack.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
    $(window).load(function() {
        $('#slider').nivoSlider();
        $('#slider-bkg').show();
    });
    </script>
{% endblock %}

{% block navbar %}
    {% include "LiveMainBundle::menu.html.twig" %}

    <div class="slider-wrapper container theme-default">
        <div id="slider" class="nivoSlider">
            <img src="{{ asset('bundles/liveblog/images/slider/live_assos.jpg') }}" alt="" title="#live-assos-prez" />
            <a href="#"><img src="{{ asset('bundles/liveblog/images/slider/jam_sess.jpg') }}" alt="" title="#htmlcaption" /></a>
            <img src="{{ asset('bundles/liveblog/images/slider/batterie.jpg') }}" alt="" />
            <img src="{{ asset('bundles/liveblog/images/slider/jam_sess_2.jpg') }}" alt="" />
        </div>
    </div>
    <div id="live-assos-prez" class="nivo-html-caption">
        Live Efrei est l'association musicale de L'efrei. <a href="{{ path('about') }}">En savoir plus !</a>
    </div>
{% endblock %}
