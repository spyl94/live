{% extends '::base.html.twig' %}

{% block navbar %}
    {% include "LiveMainBundle::menu.html.twig" %}
{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="span8">
      <h2 class="section-title">Tag : {{ tag.name }}</h2>

      {% if posts is not empty %}
      <div class="posts-container">
       {{ include('LiveBlogBundle:Post:list.html.twig', { 'posts': posts }) }}
      </div>

      {{ include('LiveBlogBundle::pagination.html.twig', { 'page' : page, 'nombrePage' : nombrePage }) }}
      {% else %}
          Aucun article pour le moment, revennez plus tard !
      {% endif %}

    </div>
  </div>
</div>
{% endblock %}
