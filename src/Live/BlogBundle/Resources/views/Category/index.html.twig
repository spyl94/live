{% extends "LiveBlogBundle::admin.html.twig" %}

{% block body %}
<div class="container">
    <h1>Liste des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Activé</th>
                <th>Création</th>
                <th>Dernière modification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.enabled }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_category_show', { 'id': entity.id }) }}">Regarder</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_category_edit', { 'id': entity.id }) }}">Editer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_category_new') }}"><button class="btn btn-large btn-primary" type="button">Ajouter une nouvelle catégorie</button></a>
</div>
    {% endblock %}
