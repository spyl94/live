{% extends "LiveBlogBundle::admin.html.twig" %}

{% block body %}
<div class="container">
    <h1>Editer la catégorie</h1>

    <form action="{{ path('admin_category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-primary btn-large">Editer</button>
            <a href="{{ path('admin_category') }}"><button class="btn btn-large" type="button">Retour à la liste des actions</button></a>
            <form action="{{ path('admin_category_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-danger">Supprimer (définitivement)</button>
            </form>
        </p>
    </form>
</div>
{% endblock %}
